@model DAW_project.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<h2>Ce vrei sa modifici?</h2>
<form method="post" action="/Comments/Edit/@ViewBag.Comment.CommentId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.TextAreaFor(m => m.Text, new { @class = "form-control comment-area" })
    <br />
    <button class="btn btn-primary" type="submit">Editeaza comentariul</button>
</form>

