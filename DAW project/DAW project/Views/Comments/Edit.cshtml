@model DAW_project.Models.Comment

@{
    ViewBag.Title = "Edit";
}

<h2>Editare comentariu</h2>
<form method="post" action="/Comments/Edit/@ViewBag.Comment.CommentId">
    @Html.HttpMethodOverride(HttpVerbs.Put)
    @Html.Label("Ce vrei sa modifici la comentariu?")
    @Html.TextAreaFor(m => m.Text, new { @class = "form-control" })
    <br />
    <button class="btn btn-success" type="submit">Editeaza comentariul</button>
</form>

