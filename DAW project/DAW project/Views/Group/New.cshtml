@model DAW_project.Models.Group

@{
    ViewBag.Title = "New";
}

<h2>Cum vrei sa se numeasca grupul?</h2>

@using (Html.BeginForm(actionName: "New", controllerName: "Group"))
{
    @Html.ValidationSummary(false, null, new { @class = "text-danger" })
    @Html.TextBoxFor(m => m.GroupName, new { @class = "form-control comment-area" })
    @Html.ValidationMessageFor(m => m.GroupName, null, new { @class = "text-danger" })
    <br />
    <button class="btn btn-primary" type="submit">Creaza</button>
}