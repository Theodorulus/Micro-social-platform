@model DAW_project.Models.Group

@{
    ViewBag.Title = "Edit";
}

<h2>Cum vrei sa modifici numele grupului?</h2>

@using (Html.BeginForm(actionName: "Edit", controllerName: "Group"))
{
    @Html.ValidationSummary(false, "", new { @class = "text-danger" })
    @Html.HttpMethodOverride(HttpVerbs.Put)

    @Html.Hidden("GroupAdmin_Id")
    @Html.TextAreaFor(m => m.GroupName, new { @class = "form-control comment-area" })
    @Html.ValidationMessageFor(m => m.GroupName, null, new { @class = "text-danger" })
    <br />
    <button class="btn btn-primary" type="submit">Modifica grupul</button>
}