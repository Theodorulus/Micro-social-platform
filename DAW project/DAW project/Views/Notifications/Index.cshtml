
@{
    ViewBag.Title = "Index";
}

<h2>Notificari</h2>

@foreach (DAW_project.Models.Notification notif in ViewBag.Notifications)
{
<div class="panel panel-notification">

    @if (notif.Text != null && notif.Type == "Post")
    {
        <p>Un admin a sters o postare a dumneavoastra cu urmatorul mesaj: "@notif.Text"</p>
    }
    @if (notif.Text == null && notif.Type == "Post")
    {
        <p>Un admin a sters o postare a dumneavoastra.</p>
    }

    @if (notif.Text != null && notif.Type == "Comment")
    {
        <p>Un admin a sters un comentariu al dumneavoastra cu urmatorul mesaj: "@notif.Text"</p>
    }
    @if (notif.Text == null && notif.Type == "Comment")
    {
        <p>Un admin a sters un comentariu al dumneavoastra.</p>
    }

    @if (notif.Text != null && notif.Type == "Group")
    {
        <p>Un admin a sters un grup al dumneavoastra cu urmatorul mesaj: "@notif.Text"</p>
    }
    @if (notif.Text == null && notif.Type == "Group")
    {
        <p>Un admin a sters un grup al dumneavoastra.</p>
    }

            <span class=" date-label">@notif.RequestTime.ToString("dd.MM.yyyy") la @notif.RequestTime.ToString("HH:mm")</span>

</div>
    <br />
    <br />

}

<br />
<div>
    @if (ViewBag.Requests.Count > 0)
    {
        <div class=" prieten">Cereri de prietenie:</div>
    }

    <br />
    @foreach (var request in ViewBag.Requests)
    {
        <a href="/User/Show/@request.User1.Id"><div class="clear-link prieten">@request.User1.FirstName @request.User1.LastName</div></a>
        <a class="btn btn-sm btn btn-primary" href="/User/AddFriend/@request.User1.Id"> Accepta Cererea </a>
        <a class="btn btn-sm btn btn-danger" href="/User/DelFriend/@request.User1.Id"> Respinge Cererea </a>
        <br /><br />
    }

</div>
